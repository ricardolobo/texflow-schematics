{
  "$schema": "http://json-schema.org/schema",
  "$id": "NestDomainEventSchema",
  "title": "Domain Event Options",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "name": {
      "type": "string",
      "description": "Nome completo do evento (ex.: process.reconciliation.completed).",
      "$default": { "$source": "argv", "index": 0 }
    },
    "moduleName": {
      "type": "string",
      "description": "Nome lógico do módulo (ex.: process-actors). Se não vier, usa --path.",
      "$default": { "$source": "argv", "index": 1 }
    },
    "directory": {
      "type": "string",
      "description": "(Opcional) Override do diretório base (ex.: src/process-actors)."
    },
    "path": {
      "type": "string",
      "description": "(Interno do Nest CLI) — aceito como fallback para o módulo."
    }
  },
  "required": ["name"]
}
